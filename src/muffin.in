prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
JAVA=@JAVA@
JAVA_COMPILER=@JAVA_COMPILER@

jarpath=$libdir/muffin.jar

if [ -n "$CLASSPATH" ]
then
    CLASSPATH=$jarpath:$CLASSPATH
else
    CLASSPATH=$jarpath
fi
export CLASSPATH

if [ "$JAVA_COMPILER" = "tya" ]
then
    JAVA_COMPILER=tya
    export JAVA_COMPILER
fi

exec $JAVA org.doit.muffin.Main $*
